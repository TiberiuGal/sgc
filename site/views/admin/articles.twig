{% extends "admin.layout.twig" %}

{% block content %}
    <h2>lista articole:</h2>
    <a href="add-article" class="btn btn-default btn-sm">adauga articol</a>
    <table class="table table-striped table-hover">
        <thead >
            <tr>
                <th width="20">id</th>
                <th width="200">titlu</th>

                <th>pe scurt</th>
                <th>categorii</th>
                <th>actiuni</th>

            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{article.id}}</td>
                    <td>{{article.title}}<br/>
                        <span class="link">{{article.slug}}</span></td>
                    <td>{{article.excerpt}}</td>
                    <td>{{article.categories | join(', ')}}</td>
                    <td><a href="/admin/article/{{article.id}}" class="btn btn-default btn-xs"><i class="glyphicon glyphicon-pencil"></i> | edit </a> </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}                
