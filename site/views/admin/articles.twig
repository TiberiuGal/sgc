{% extends "admin.layout.twig" %}

{% block content %}
    <div class="admin_form">
    <table class="table table-striped table-hover">

        <thead >
            <tr><th colspan="4">lista articole:</th><th><a href="/index.php/admin/article/0" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-plus"></i> | adauga pagina noua</a></th></tr>
            <tr>
                <th width="20">id</th>
                <th width="200">titlu</th>

                <th>pe scurt</th>
                <th>categorii</th>
                <th width="120">actiuni</th>

            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{article.id}}</td>
                    <td>{{article.title}}<br/>
                        <span class="link">{{article.slug}}</span></td>
                    <td>{{article.excerpt}}</td>
                    <td>{{article.categories | join(', ')}}</td>
                    <td>
                        <div class="btn-group">

                            <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"> Actiuni <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="/index.php/admin/article/{{article.id}}" class="btn-default"><i class="glyphicon glyphicon-pencil"></i> | edit </a> 
                                </li>
                                <li>       
                                    <a href="/index.php{{article.slug}}" target="_blank" class="btn-success "><i class="glyphicon glyphicon-eye-open"></i> | vezi in site </a> 
                                </li>
                                <li>        
                                    <a href="/index.php/admin/article/{{article.id}}/add_to_menu" class="btn-warning " title="adauga pagina in meniu"><i class="glyphicon glyphicon-pushpin"></i> | meniu </a> 
                                </li>
                                

                                <li>        
                                    <a href="#" data-link="/index.php/admin/article/{{article.id}}" data-object-name="aceasta pagina" class="btn-danger jst_confirm" ><i class="glyphicon glyphicon-trash"></i> | sterge </a> 
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
        </div>
    {%include('/admin/partials/modal_dialog.twig')%}        

{% endblock %}                

