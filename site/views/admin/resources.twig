{% extends "admin.layout.twig" %}


{% block content %}


    <table class="table table-striped table-hover">

        <thead >
            <tr><th colspan="5">lista resurse:</th><th><a href="/admin/resource/0" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-plus"></i> | adauga resursa </a></th></tr>
            <tr>
                <th width="20">id</th>
                <th width="200">titlu</th>
                <th>descriere</th>
                <th>fisier</th>
                <th>tip</th>
                <th width="120">actiuni</th>

            </tr>
        </thead>
        <tbody>
            {% for resource in resources %}
                <tr>
                    <td>{{resource.id}}</td>
                    <td>{{resource.title}} </td>
                    <td>{{resource.description}}</td>
                    <td>{{resource.file_name }} ( {{resource.file_size}} )</td>
                    <td>
                        <a href="/admin/resource/{{resource.id}}" class="btn btn-default btn-xs"><i class="glyphicon glyphicon-pencil"></i> | edit </a>
                        <a href="#" data-link="/admin/resource/{{resource.id}}" class="btn btn-danger btn-xs jst_confirm" ><i class="glyphicon glyphicon-delete"></i> | sterge </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Atentie</h4>
                </div>
                <div class="modal-body">
                    <p>Esti sigur ca vrei sa stergi resursa?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Nu, Renunt</button>
                    <button type="button" class="btn btn-danger">Da, Sterge</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {

            $('.jst_confirm').click(function () {
                var actionUrl = $(this).attr('data-link');
                
                $('.modal .btn-danger').unbind('click').click(function () {
                    $.ajax({
                        url: actionUrl,
                        type: 'DELETE',
                        success: function (result) {
                            window.location.reload();
                        }
                    });
                });
                $('.modal').modal('show');
            });
        });
    </script>


{% endblock %}
